<HomeScreen>:
    name: "home"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size

    MDBoxLayout:
        orientation:"vertical"
        padding:root.width/200
        spacing: root.width/250
        
        MDBoxLayout
            padding:root.width/100
            spacing:root.width/23
            orientation:"vertical"
            adaptive_height:True
            MDBoxLayout:
                orientation:"horizontal"
                padding:[root.width/35, root.width/20,root.width/35, root.width/40]
                adaptive_height:True
                MDBoxLayout:
                    orientation:"vertical"
                    adaptive_height:True
                    spacing: root.width / 20
                    MDLabel:
                        text: "Selamat Datang"
                        font_name: "Inter"
                        font_size: root.width /35
                        size:self.size
                    MDLabel:
                        text: root.getNameUser()
                        font_name:"Poppins"
                        font_size: root.width /20
                        bold: True
                        size:self.size
                MDIconButton:
                    icon: "account"
                    icon_size: root.width /15
                    pos_hint: {"center_x":1,"center_y":0.5}   
                Widget:
                    size_hint_x:None
                    width: root.width/35
            MDCard:
                md_bg_color:0.12,0.13,0.2,0.8
                orientation: "vertical"
                size_hint_y:None
                height: root.height/5
                padding: root.width/30
                spacing: root.height/70
                MDBoxLayout:
                    orientation:"horizontal"
                    adaptive_height:True
                    MDBoxLayout:
                        orientation: "horizontal"
                        adaptive_height:True   
                        spacing:root.width/90    
                        MDIcon:
                            icon:"fire"
                            size_hint: None,None
                            font_size: root.width/26
                            pos: self.pos
                            
                        MDLabel:
                            text: "Pemula"
                            font_name: "Inter"
                            font_size: root.width/35
                            halign: "left"
                            valign: "bottom"
                            size: self.size
                    
                    MDLabel:
                        text:"Materi C++ Dasar  "
                        size:self.size
                        halign: "right"
                        valign: "bottom"
                        font_size: root.width/30
                        font_name: "Poppins"
                        bold:True
                        
                MDBoxLayout:
                    orientation:"horizontal"
                    MDBoxLayout:
                        orientation:"vertical"
                        
                        MDLabel:
                            text:"Misi Harian"
                            font_name:"Poppins"
                            font_size: root.width/15
                            bold:True
                            size:self.size
                        MDLabel:
                            text:"telah tersedia !"
                            font_size: root.width/33
                            font_name: "Inter"
                            self: self.size
                        Widget
                        
                    MDIconButton:
                        icon: "arrow-right"
                        size_hint: None,None
                        font_size: root.width/35
                        pos: self.pos
                        
        MDBoxLayout:
            adaptive_height:True
            padding:root.width/23
            spacing: root.width/23
            orientation: "vertical"
            MDLabel:
                text:"Bahasa Pemrograman"
                font_name:"Poppins"
                font_size: root.width/25
                bold:True
                valign:"top"
                size: self.size
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: root.height/13
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    orientation: "horizontal"
                    bar_width:0
                    MDBoxLayout: 
                        spacing: root.height/15
                        padding:[0,0,86,0]
                        size_hint_x: None
                        width: self.minimum_width
                        IconCategory:
                            cicon: "language-python"
                        IconCategory:
                            cicon: "language-javascript"
                        IconCategory:
                            cicon: "language-java"
                        IconCategory:
                            cicon: "language-cpp"
                        IconCategory:
                            cicon: "language-c"
                        IconCategory:
                            cicon: "language-csharp"
                        IconCategory:
                            cicon: "language-php"
                        IconCategory:
                            cicon: "language-html5"
                        IconCategory:
                            cicon: "language-css3"
                        IconCategory:
                            cicon: "language-typescript"
                        IconCategory:
                            cicon: "language-go"
                        IconCategory:
                            cicon: "language-rust"
                
        MDBoxLayout:
            padding:root.width/23 
            spacing: 0
            orientation: "vertical"
            MDLabel:
                text:"Course"
                font_name:"Poppins"
                font_size: root.width/25
                bold:True
                valign:"middle"
                height:self.texture_size[1]
            MDBoxLayout:
                orientation:"vertical"
                padding:0
                spacing:0
                size_hint_y:None
                height:root.height/2.3
                ScrollView:
                    do_scroll_x:False
                    do_scroll_y:True
                    MDBoxLayout: 
                        spacing: root.width/5
                        padding:[0,root.width/4,0,0]
                        adaptive_height:True
                        orientation: "vertical"
                        Course
                        Course
                        Course
                        Course
                        Course
                        MoreCourse

    Navbar