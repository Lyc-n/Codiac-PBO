<TesKemampuanScreen>:
    name: "teskemampuan"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: "assets/bg1.png"  # Background layar
                pos: self.parent.pos
                size: self.parent.size

        MDBoxLayout:
            orientation: "vertical"
            padding: root.width / 20
            spacing: root.width / 30
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 1, None
            height: root.height * 0.8

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: root.width / 40
                MDLabel:
                    text: "Tes Kemampuan"
                    font_name: "Poppins"
                    font_size: root.width / 15
                    bold: True
                    halign: "center"
                    theme_text_color:"Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5}  # Posisi di bagian atas layar
                Widget:
                    size_hint_y: None
                    height: root.width / 25  # Jarak vertikal

                MDLabel:
                    text: "Pilih soal yang ingin anda kerjakan"
                    font_name: "Inter"
                    medium: True
                    font_size: root.width / 30
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0.8, 0.8, 0.8, 1

            Widget:
                size_hint_y: None
                height: root.width / 20

            Image:
                source: "assets/asetTesKemampuan.png"  # Gambar burung
                size_hint: None, None
                size: root.width / 1.5, root.width / 1.5  # Ukuran gambar proporsional
                pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Posisi di tengah layar

            Widget:
                size_hint_y: None
                height: root.width / 20

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "24dp"  # Jarak antar tombol
                padding: 10  # Padding di sekitar tombol

                CustomButton:
                    md_bg_color: 0.1,0.1,0.2,1
                    custext: "Test Soal"
                    on_release: app.change("tsscpp")
                CustomButton:
                    md_bg_color: 0.1,0.1,0.2,1
                    custext: "Study Kasus"
                    on_release: app.change("studykasus")
            CustomButton:
                custext: "Tes Soal + Study Kasus"
                on_release: app.change("tsscpp")