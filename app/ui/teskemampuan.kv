<TesKemampuanScreen>:
    name: "teskemampuan"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: "assets/bg1.png"  # Background layar
                pos: self.parent.pos
                size: self.parent.size

        MDBoxLayout:
            orientation: "vertical"
            padding: root.width / 20
            spacing: root.width / 30
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 1, None
            height: root.height * 0.8

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: root.width / 40
                MDLabel:
                    text: "Tes Kemampuan"
                    font_name: "Poppins"
                    font_size: root.width / 15
                    bold: True
                    halign: "center"
                    theme_text_color:"Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": 0.5}  # Posisi di bagian atas layar

                # Tambahkan jarak antara teks "Tes Kemampuan" dan "Pilih soal..."
                Widget:
                    size_hint_y: None
                    height: root.width / 25  # Jarak vertikal

                MDLabel:
                    text: "Pilih soal yang ingin anda kerjakan"
                    font_name: "Inter"
                    medium: True
                    font_size: root.width / 30
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0.8, 0.8, 0.8, 1

            Widget:
                size_hint_y: None
                height: root.width / 20

            Image:
                source: "assets/asetTesKemampuan.png"  # Gambar burung
                size_hint: None, None
                size: root.width / 1.5, root.width / 1.5  # Ukuran gambar proporsional
                pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Posisi di tengah layar

            Widget:
                size_hint_y: None
                height: root.width / 20

            MDBoxLayout:
                orientation: "horizontal"
                spacing: 10  # Jarak antar tombol
                padding: 10  # Padding di sekitar tombol

                Button:
                    text: "Tes Soal"
                    size_hint_x: 1  # Tombol memanjang hingga memenuhi sisi kiri
                    size_hint_y: None  # Nonaktifkan pengaturan tinggi otomatis
                    height: root.width / 8  # Tinggi tombol sedang
                    pos_hint: {"center_y": 0.5}  # Posisi vertikal di tengah
                    font_name: "assets/fonts/Poppins-Bold.ttf"  # Gaya font Poppins Bold
                    font_size: 18  # Ukuran font
                    background_normal: ""  # Nonaktifkan gambar default
                    background_color: 0, 0, 0, 0  # Transparan untuk menggunakan canvas
                    canvas.before:
                        Color:
                            rgba: 0.086, 0.086, 0.086, 1  # Warna latar belakang tombol
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]  # Radius sudut tombol kecil

                Button:
                    text: "Tes Studikasus"
                    size_hint_x: 1  # Tombol memanjang hingga memenuhi sisi kanan
                    size_hint_y: None  # Nonaktifkan pengaturan tinggi otomatis
                    height: root.width / 8  # Tinggi tombol sedang
                    pos_hint: {"center_y": 0.5}  # Posisi vertikal di tengah
                    font_name: "assets/fonts/Poppins-Bold.ttf"  # Gaya font Poppins Bold
                    font_size: 18  # Ukuran font
                    background_normal: ""  # Nonaktifkan gambar default
                    background_color: 0, 0, 0, 0  # Transparan untuk menggunakan canvas
                    canvas.before:
                        Color:
                            rgba: 0.086, 0.086, 0.086, 1  # Warna latar belakang tombol
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]  # Radius sudut tombol kecil