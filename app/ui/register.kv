<RegisterScreen>:
    name: "register"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
                
    MDBoxLayout:
        orientation: "vertical"
        padding: 12
        spacing: root.width/20
        
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height:True
            Image:
                source: "assets/icontext.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: None, None
                size: root.width/3, root.width/3
                
            MDLabel:
                font_name: "Poppins"
                text: "Silahkan masukkan data diri anda"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0.9,0.9, 1, 1
                font_size: root.width/27

        Widget:
            size_hint_y: None
            height: root.width/70

        MDBoxLayout:
            orientation:"vertical"
            adaptive_height:True
            MDTextField:
                id: username
                hint_text: "    Username"
                icon_right: "account"
                mode: "rectangle"
                size_hint_y: None
                height: root.width/8
                font_size: root.width/30
                radius: [24, 24, 24, 24]
            
            MDTextField:
                id: email
                hint_text: "    Email"
                icon_right: "email"
                mode: "rectangle"
                size_hint_y: None
                height: root.width/8
                font_size: root.width/30
                radius: [24, 24, 24, 24]
            
            MDTextField:
                id: password
                hint_text: "    Password"
                icon_right: "lock"
                password: True
                mode: "rectangle"
                size_hint_y: None
                height: root.width/8
                font_size: root.width/30
                radius: [24, 24, 24, 24]
            
            MDBoxLayout:
                size_hint: None, None
                adaptive_height: True
                orientation: "vertical"
                size_hint_x: 1
                spacing: root.width/40
                MDTextField:
                    id: cpassword
                    hint_text: "    Confirm Password"
                    password: True
                    icon_right: "lock"
                    mode: "rectangle"
                    size_hint_y: None
                    height: root.width/8
                    font_size: root.width/30
                    radius: [24, 24, 24, 24]
                MDBoxLayout:
                    orientation: "horizontal"
                    adaptive_height: True
                    spacing: 8
                    MDCheckbox:
                        id: checkBox_terms
                        size_hint: None, None
                        size: "24dp","24dp"
                        
                    MDLabel:
                        text: "saya menyetujui syarat & ketentuan"
                        font_name: "Poppins"
                        halign: "left"
                        valign: "middle"
                        font_size: "12sp"
                        theme_text_color: "Custom"
                        text_color: 0.6,0.6,0.6,1
        Widget:
            size_hint_y: None
            height: root.width/56
        CustomButton:
            custext: "Sign Up"
            on_release: root.do_reg()
            
        MDLabel:
            id: status
            text: ""
            halign: "center"
            theme_text_color: "Error"