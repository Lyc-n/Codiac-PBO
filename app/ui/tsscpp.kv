<TssCpp>:
    name: "tsscpp"
            
    ScreenManager:
        id: screen_manager
        
    MDBoxLayout:
        padding:"24dp"
        orientation:"vertical"
        MDBoxLayout:
            adaptive_height:True
            Widget
            MDLabel:
                adaptive_size: True
                text: "Tes Kemampuan C++"
                font_size: root.width/18
                font_name: "Poppins"
                bold: True
                size: self.size
                halign: "center"
                size_hint: None, None
                height:self.texture_size[1]
                width:self.texture_size[0]
            MDLabel:
                adaptive_size: True
                id: timer_label
                text: "menunggu..."
                text_size: self.size
                halign: "right"
                font_name: "Poppins"
                font_size: "14sp"
                size_hint: None, None
                height:self.texture_size[1]
                width:self.texture_size[0]
        Widget

    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_x":0.05,"center_y":0.953}
        on_release: app.change("layoutbase")