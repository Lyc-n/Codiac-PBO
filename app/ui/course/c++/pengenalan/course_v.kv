<CourseScreen_v>:
    name: "course_v"
    orientation: "vertical"
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
    MDBoxLayout:
        orientation: "vertical"
        padding: root.width/25
        spacing: root.width/25
        Widget:
            size_hint_y: None
            height: "56dp"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            orientation: "vertical"
            bar_width:0
            MDBoxLayout:
                orientation: "vertical"
                spacing: root.width/15
                adaptive_height:True
                MDCard:
                    orientation: "vertical"
                    padding: "24dp"
                    size_hint_y: None
                    height: root.height/4.2
                    md_bg_color: 0.1,0.1,0.2,1
                    MDLabel:
                        text: "[size=42][b]Apa itu Operator?[/b][/size]\n\n[b]Operator[/b] adalah simbol yang digunakan untuk melakukan operasi pada data. Contoh operator: \n\n[b]1. Operator Aritmatika[/b]: +, -, *, /, %.\n[b]2. Operator Perbandingan[/b]: ==, !=, <, >, <=, >=.\n[b]3. Operator Logika[/b]: &&, ||, !."
                        font_name: "Poppins"
                        font_size: "14sp"
                        markup: True
                        size_hint_y:None
                        height: self.texture_size[1]
                        
                MDCard:
                    orientation: "vertical"
                    size_hint_y: None
                    height: root.height/5
                    md_bg_color: 0.1,0.1,0.2,1
                    MDCard:
                        orientation: "horizontal"
                        md_bg_color: 0,0,0,0
                        size_hint_y: None
                        height: "32dp"
                        padding: "10dp"
                        canvas.before:
                            Color: 
                                rgba: 1,1,1,1
                            RoundedRectangle:
                                source: "assets/bgbtn2.png"
                                pos: self.pos
                                size:self.size
                                radius: [24, 24, 0, 0]
                        MDBoxLayout:
                            spacing: "8dp"
                            Widget:
                            MDCard:
                                size_hint: None, None
                                size: "12dp","12dp"
                                md_bg_color: 0,0.3,1,1
                            MDCard:
                                size_hint: None, None
                                size: "12dp","12dp"
                                md_bg_color: 0,1,0,1
                            MDCard:
                                size_hint: None, None
                                size: "12dp","12dp"
                                md_bg_color: 1,1,0,1
                            MDCard:
                                size_hint: None, None
                                size: "12dp","12dp"
                                md_bg_color: 1,0,0,1
                    MDBoxLayout:
                        padding: "24dp"
                        MDLabel:
                            text: "[color=#0705bc]#include[/color] [color=#12b5ba]<iostream>[/color]\n\n[color=#0705bc]int[/color] [color=#1261ba]main[/color][color=#12b5ba]() {\n    [color=#0705bc]int[/color] a = 10, b = 5;\n    std::cout << \"Penjumlahan: \" << a + b;\n    [color=#0705bc]return[/color] [color=#12b5ba]0;\n}[/color]"
                            font_name: "CourierPrime"
                            font_size: "14sp"
                            markup: True
                            size_hint_y:None
                            height: self.texture_size[1]
                        
    MDBoxLayout:
        padding:"32dp"
        CustomButton:
            custext: "next"
            on_release: app.change_screen("coursecpp", "task_v")