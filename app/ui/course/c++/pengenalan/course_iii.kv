<CourseScreen_iii>:
    name: "course_iii"
    orientation: "vertical"
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
    MDBoxLayout:
        orientation: "vertical"
        padding: root.width/25
        spacing: root.width/25
        Widget:
            size_hint_y: None
            height: "56dp"
        ScrollView:
            # ScrollView akan mengisi sisa ruang di dalam MDBoxLayout ini
            size_hint: 1, 1
            do_scroll_x: False
            Image:
                source: "assets/materi3.png"
                size_hint: 1, None
                height: self.width / self.image_ratio
                allow_stretch: True
                        
    MDBoxLayout:
        padding:"32dp"
        CustomButton:
            custext: "next"
            on_release: app.change_screen("coursecpp", "task_iii")
        MDIconButton:
            custom_key: "m_iii"
            icon: "bookmark-outline"
            icon_size: "28sp"
            size: self.size
            pos: self.pos
            on_release: 
                app.ubahstat(self)
                self.icon = "bookmark"