<TaskScreen_i>:
    name: "task_i"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
                
    MDBoxLayout:
        orientation: "vertical"
        padding: root.width/25
        spacing: root.width/25
        Widget:
            size_hint_y: None
            height: "56dp"
        MDBoxLayout:
            orientation:"vertical"
            MDBoxLayout:
                orientation: "vertical"
                spacing: root.width/15
                Widget:
                    size_hint_y: None
                    height: "36dp"
                MDCard:
                    orientation: "vertical"
                    padding: "24dp"
                    size_hint_y: None
                    height: "156dp"
                    MDLabel:
                        text: "Apa fungsi dari #include <iostream> dalam program C++?"
                        font_name: "Poppins"
                        font_size: "14sp"
                        markup: True
                        size: self.size
                        halign: "center"
                Widget:
                    size_hint_y: None
                    height: "36dp"
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "24dp"
                    Widget
                    CustomButton:
                        id: A
                        custext: "Mengakhiri program"
                        md_bg_color: 0.1,0.1,0.2,1
                        on_release: app.root.get_screen("coursecpp").select_one(self)
                    CustomButton:
                        id: B    
                        custext: "Menampilkan teks ke layar"
                        md_bg_color: 0.1,0.1,0.2,1
                        on_release: app.root.get_screen("coursecpp").select_one(self)
                    CustomButton:
                        id: C
                        custext: "Mendeklarasikan pustaka"
                        md_bg_color: 0.1,0.1,0.2,1
                        on_release: app.root.get_screen("coursecpp").select_one(self)
                    CustomButton:
                        id: D
                        custext: "Menghapus data dari memori"
                        md_bg_color: 0.1,0.1,0.2,1
                        on_release: app.root.get_screen("coursecpp").select_one(self)
                    MDBoxLayout:
                        id: tetap
                        orientation: "horizontal"
                        spacing: "24dp"
                        CustomButton:
                            id: tetap
                            custext: "prev"
                            md_bg_color: 0.1,0.1,0.2,1
                            on_release: app.change_screen("coursecpp", "course_i")
                        CustomButton:
                            id: tetap
                            custext: "next"
                            md_bg_color: 0.1,0.1,0.2,1
                            on_release: app.change_screen("coursecpp", "course_ii")