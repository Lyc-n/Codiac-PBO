<LoginScreen>:
    name: "login"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
                
    MDBoxLayout:
        orientation: "vertical"
        padding: 12
        spacing: 24
        
        MDFloatLayout:
            Image:
                source: "assets/icontext.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.55}
                size_hint: 1,1
                
            MDLabel:
                font_name: "Poppins"
                text: "Silahkan masukkan akun anda"
                pos_hint: {"center_x": 0.5, "center_y": 0.3}
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_style: "Body1"
      
        MDTextField:
            id: username
            hint_text: "    Username"
            icon_right: "account"
            mode: "rectangle"
            radius: [24, 24, 24, 24]
        
        MDBoxLayout:
            size_hint: None, None
            adaptive_height: True
            orientation: "vertical"
            size_hint_x: 1
            spacing: 18
            MDTextField:
                id: password
                hint_text: "    Password"
                password: True
                icon_right: "lock"
                mode: "rectangle"
                radius: [24, 24, 24, 24]
            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                spacing: 8
                MDCheckbox:
                    id: checkBox_terms
                    size_hint: None, None
                    size: "24dp","24dp"
                    
                MDLabel:
                    text: "ingat saya"
                    font_name: "Poppins"
                    halign: "left"
                    valign: "middle"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: 0.6,0.6,0.6,1
    
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            spacing: 24
            padding: [0,56,0,0]
            
            CustomButton:
                custext: "Login"
                on_release: root.do_login()
            CustomButton:
                custext: "Sign Up"
                on_release: app.go_to_reg()
    
        MDBoxLayout:
            adaptive_height: True
            padding: 12
            MDSeparator:
                height: "1dp"
                color: 0.5,0.5,0.5,1
                
        CustomButton:
            custext: "Google"
            clr: 0,0,0,1
            bg: ""
            on_release: root.do_login()
            
        MDLabel:
            id: status
            text: ""
            halign: "center"
            theme_text_color: "Error"