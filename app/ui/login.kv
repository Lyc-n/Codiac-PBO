<LoginScreen>:
    name: "login"
    
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: "assets/bg1.png"
                pos: self.parent.pos
                size: self.parent.size
                
    MDBoxLayout:
        orientation: "vertical"
        padding: 12
        spacing: root.width/10
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height:True
            Image:
                source: "assets/icontext.png"
                size_hint: None, None
                size: root.width/3, root.width/3
                pos_hint: {"center_x":0.5, "center_y":0.5}
            MDLabel:
                font_name: "Poppins"
                text: "Silahkan masukkan akun anda"
                halign: "center"
                valign: "top"
                theme_text_color: "Custom"
                text_color: 0.9, 0.9, 1, 1
                font_size: root.width / 27
                size: self.size
      
        MDBoxLayout:
            orientation:"vertical"
            adaptive_height:True
            MDTextField:
                id: username
                hint_text: "    Username"
                icon_right: "account"
                mode: "rectangle"
                size_hint_y: None
                height: root.width/8
                font_size: root.width/30
                radius: [24, 24, 24, 24]
            
            MDBoxLayout:
                size_hint: None, None
                adaptive_height: True
                orientation: "vertical"
                size_hint_x: 1
                spacing: 18
                MDTextField:
                    id: password
                    hint_text: "    Password"
                    password: True
                    icon_right: "lock"
                    mode: "rectangle"
                    height: root.width/8
                    font_size: root.width/30
                    radius: [24, 24, 24, 24]
                MDBoxLayout:
                    orientation: "horizontal"
                    adaptive_height: True
                    spacing: 8
                    MDCheckbox:
                        id: checkBox_terms
                        size_hint: None, None
                        size: "24dp","24dp"
                        
                    MDLabel:
                        text: "ingat saya"
                        font_name: "Poppins"
                        halign: "left"
                        valign: "middle"
                        font_size: "12sp"
                        theme_text_color: "Custom"
                        text_color: 0.6,0.6,0.6,1
    
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            spacing: root.width/35
            padding: [0,root.width/40,0,0]
            
            CustomButton:
                custext: "Login"
                on_release: root.do_login()
            CustomButton:
                custext: "Sign Up"
                on_release: app.go_to_reg()
    
        MDBoxLayout:
            adaptive_height: True
            padding: 12
            MDSeparator:
                height: "1dp"
                color: 0.5,0.5,0.5,1
                
        CustomButton:
            custext: "Google"
            clr: 0,0,0,1
            bg: ""
            on_release: root.do_login()
            
        MDLabel:
            id: status
            text: ""
            halign: "center"
            theme_text_color: "Error"